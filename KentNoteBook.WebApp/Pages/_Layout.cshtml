<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<title>@ViewData["Title"] - KentNoteBook.WebApp</title>

	<environment include="Development">
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
		<link href="~/lib/fontawesome/css/font-awesome.css" rel="stylesheet" />
		<link rel="stylesheet" href="~/css/site.css" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"
			  asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.css"
			  asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
		<link href="~/lib/fontawesome/css/font-awesome.css" rel="stylesheet" />
		<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
	</environment>
</head>
<body>
	<nav class="navbar navbar-dark sticky-top bg-moderate-blue flex-md-nowrap p-0">
		<a class="navbar-brand font-weight-bold col-sm-3 col-md-2 mr-0" href="#">KentNoteBook WebApp</a>
		<ul class="navbar-nav px-3">
			<li class="nav-item text-nowrap">
				<a class="nav-link" href="#">Sign out</a>
			</li>
		</ul>
	</nav>
	<div class="container-fluid pl-0">
		<div class="row">
			<nav class="col-md-2 d-none d-md-block bg-light sidebar pl-3 pr-0 border-right" id="navbar-menu">
				<div class="sidebar-sticky">
					<ul class="nav nav-list flex-column">
						<li class="nav-item border-bottom">
							<a class="nav-link active" href="#" aria-expanded="false">
								<span><i class="fa fa-home" aria-hidden="true"></i></span>
								<span>Dashboard</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link border-bottom" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
								<span><i class="fa fa-list" aria-hidden="true"></i></span>
								<span>Orders</span>
								<i class="fa fa-angle-down pt-1 float-right"></i>
							</a>
							<ul class="nav submenu flex-column bg-white collapse" id="collapseExample">
								<li class="nav-item border-bottom col-12 pl-3">
									<a class="nav-link pl-0" href="#" role="button">
										<span><i class="fa fa-caret-right invisible" aria-hidden="true"></i></span>
										<span>Orders 1</span>
									</a>
								</li>
								<li class="nav-item border-bottom col-12 pl-3">
									<a class="nav-link pl-0" href="#" role="button">
										<span><i class="fa fa-caret-right invisible" aria-hidden="true"></i></span>
										<span>Orders 2</span>
									</a>
								</li>
								<li class="nav-item border-bottom col-12 pl-3">
									<a class="nav-link pl-0" href="#" role="button">
										<span><i class="fa fa-caret-right invisible" aria-hidden="true"></i></span>
										<span>Orders 3</span>
									</a>
								</li>
							</ul>
						</li>
						<li class="nav-item border-bottom">
							<a class="nav-link" href="#" role="button">
								<span><i class="fa fa-list" aria-hidden="true"></i></span>
								<span>Products</span>
								<i class="fa fa-angle-down pt-1 float-right"></i>
							</a>
						</li>
						<li class="nav-item border-bottom">
							<a class="nav-link" href="#" role="button">
								<span><i class="fa fa-list" aria-hidden="true"></i></span>
								<span>Customers</span>
								<i class="fa fa-angle-down pt-1 float-right"></i>
							</a>
						</li>
						<li class="nav-item border-bottom">
							<a class="nav-link" href="#" role="button">
								<span><i class="fa fa-list" aria-hidden="true"></i></span>
								<span>Reports</span>
								<i class="fa fa-angle-down pt-1 float-right"></i>
							</a>
						</li>
						<li class="nav-item border-bottom">
							<a class="nav-link" href="#" role="button">
								<span><i class="fa fa-list" aria-hidden="true"></i></span>
								<span>Integrations</span>
								<i class="fa fa-angle-down pt-1 float-right"></i>
							</a>
						</li>
					</ul>
				</div>

				<div class="text-center pt-2 pb-2 sidebar-collapse border-bottom" id="sidebar-collapse">
					<span class="sidebar-toggle-button">
						<i id="sidebar-toggle-icon" class="fa fa-angle-double-left sidebar-toggle-icon rounded-circle"></i>
					</span>
				</div>
			</nav>

			<main role="main" class="col-md-10 ml-sm-auto col-lg-10 pt-2 pl-2 pr-2">
				@RenderBody()
			</main>
		</div>
		<hr class="mt-1 mb-1" />
		<footer class="align-middle text-center font-italic mb-3">
			&copy; 2017 - KentNoteBook.WebApp
		</footer>
	</div>

	<environment include="Development">
		<script src="~/lib/jquery/dist/jquery-3.3.1.slim.js"></script>
		<script src="~/lib/popper/popper.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
		<script src="~/js/site.js" asp-append-version="true"></script>
	</environment>
	<environment exclude="Development">
		<script src="~/lib/jquery/dist/jquery-3.3.1.slim.js"></script>
		<script src="~/lib/popper/popper.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
		<script src="~/js/site.min.js" asp-append-version="true"></script>
	</environment>

	@RenderSection("Scripts", required: false)
</body>
</html>

<script>

	$(".nav-list .submenu li").click(function () {

		$(".nav-list .submenu li").removeClass("active");
		$(this).addClass("active");
	});

	$("#sidebar-toggle-icon").click(function () {
		$(this).toggleClass("fa-angle-double-left").toggleClass("fa-angle-double-right");

		if ($(this).hasClass("fa-angle-double-right")) {

		} else {

		}
	});

</script>
